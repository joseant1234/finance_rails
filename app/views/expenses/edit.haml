.card.no-margin
  .card-content

    .row.border-collection
      %nav.white.black-text.z-depth-0
        .nav-wrapper
          .col.s12.m10
            = link_to 'Expenses',expenses_path, class: "breadcrumb blue-text"
            = link_to 'EDIT',edit_expense_path(@expense), class: "breadcrumb black-text"
          .col.s12.m2.right-text
            = submit_tag 'Save', "data-disable-with": "Saving ...", class: 'deep-purple accent-4 btn', form: "edit_expense_#{@expense.id}"

    .row
      .col.s12.form-wrapper
        = render 'form'