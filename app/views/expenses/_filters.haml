= form_tag expenses_path, method: :get, remote: true, id: 'search_form' do
  .row
    .input-field.col.s12.m3
      = select_tag :country, options_from_collection_for_select(@countries,:name,:name, 'Peru'), class: 'send-filter'
      = label_tag :country, 'By country'
    .input-field.col.s12.m3
      = text_field_tag :registered_from, Date.today.to_date.beginning_of_month, class: 'datepicker send-filter'
      = label_tag :registered_from
    .input-field.col.s12.m3
      = text_field_tag :registered_to, Date.today.to_date, class: 'datepicker send-filter'
      = label_tag :registered_to
    .input-field.col.s12.m3
      = select_tag :currency, options_from_collection_for_select(@currencies,:id,:name, params[:currency]), prompt: 'Choose an option', class: 'send-filter'
      = label_tag :currency, 'By currency'
  .row
    .input-field.col.s12.m3
      = select_tag :state, options_for_select(class_enum_for_select("Expense","state")), prompt: 'Select a state', class: 'send-filter'
      = label_tag :state, 'By state'
    .input-field.col.s12.m3
      = select_tag :payment_type, options_for_select(class_enum_for_select("Expense","payment_type")), prompt: 'Choose an option', class: 'send-filter'
      = label_tag :payment_type, 'By payment type'
    .input-field.col.s12.m3
      = select_tag :bank, options_from_collection_for_select(@banks, :id, :name), prompt: 'Choose an option', class: 'send-filter'
      = label_tag :banks, 'By bank'
    .input-field.col.s12.m3
      = select_tag :source, options_for_select(class_enum_for_select('Expense','source')), prompt: 'Choose an option', class: 'send-filter'
      = label_tag :source, 'By proof of payment'
  .row
    .input-field.col.s12.m3
      = text_field_tag :planned_payment_from, '', class: 'datepicker send-filter'
      = label_tag :planned_payment_from
    .input-field.col.s12.m3
      = text_field_tag :planned_payment_to, '', class: 'datepicker send-filter'
      = label_tag :planned_payment_to
    .input-field.col.s12.m3
      = select_tag :category, options_from_collection_for_select(@categories,:id,:name), prompt: 'Choose an option', class: 'send-filter'
      = label_tag :category, 'By category'

  = hidden_field_tag :sort, params[:sort], id: 'sort_hidden'
  = hidden_field_tag :direction, params[:direction], id: 'direction_hidden'