.fixed-action-btn.new-button
  = link_to new_expense_path, class: "btn-floating waves-effect waves-light btn-large deep-purple accent-4 btn" do
    %i.material-icons add

.card.no-margin
  .card-content
    %p.bold.medium EXPENSES

    = render 'filters'

    = print_color_state_of_expense

    .overflow-x
      %table.centered
        %thead#table_header
          = render 'table_header'
        %tbody#expenses_index
          = render @expenses

    .top-space.center.pagination-from-table
      = will_paginate @expenses, renderer: MaterializePaginationCustomHelper::PaginateMaterailizeLinkRenderer

    #total
      = render 'total'

= render 'modal_pay_expense'
= render 'modal_send_contact_email'