.fixed-action-btn.new-button
  = link_to new_expense_path, class: "btn-floating waves-effect waves-light btn-large deep-purple accent-4 btn" do
    %i.material-icons add

.card.no-margin
  .card-content
    = form_tag expenses_path, method: :get, remote: true do
      %p.bold.medium EXPENSES
      .row.no-margin
        .input-field.col.s12.no-padding.search-input
          %i.material-icons.prefix search
          = text_field_tag :term, params[:term]
          = label_tag :term, 'Search by name or ruc or address or phone'
      .row
        .col.s12.no-padding
          = button_tag :submit, "data-disable-with": "Searching ...", class: 'btn deep-purple accent-4 right' do
            Search

    .overflow-x
      %table.centered
        %thead#table_header
          = render 'table_header'
        %tbody#expenses_index
          = render @expenses

    .top-space.center.pagination-from-table
      = will_paginate @expenses, renderer: MaterializePaginationCustomHelper::PaginateMaterailizeLinkRenderer
