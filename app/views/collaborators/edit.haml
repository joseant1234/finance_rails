.card.no-margin
  .card-content

    .row.border-collection
      %nav.white.black-text.z-depth-0
        .nav-wrapper
          .col.s12.m10
            = link_to 'Teams',teams_path, class: "breadcrumb blue-text"
            = link_to @collaborator.team.name, teams_path, class: "breadcrumb blue-text"
            = link_to 'Collaborators', team_collaborators_path(@collaborator.team), class: "breadcrumb blue-text"
            = link_to 'EDIT',edit_collaborator_path(@collaborator), class: "breadcrumb black-text"
          .col.s12.m2.right-text
            = submit_tag 'Save', "data-disable-with": "Saving ...", class: 'deep-purple accent-4 btn', form: "edit_collaborator_#{@collaborator.id}"

    .row
      .col.s12
        = render 'form'